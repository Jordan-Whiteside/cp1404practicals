BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: "34"
            multiline: False
            on_text_validate: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(1)
            Button:
                text: 'down'
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to km"
        on_press: app.handel_calculate(input_number.text)
    Label:
        text: app.km_output
        color: (1,1,0,1)
