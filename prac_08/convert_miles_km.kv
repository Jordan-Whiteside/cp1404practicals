BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ""
            multiline: False
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(1)
            Button:
                text: 'down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: "Convert miles to km"
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        text: app.km_output
        color: (1,1,0,1)
